<% provide(:title, current_user.username) %>
<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Username:</b>
  <%= @user.username %>
</p>

<div class="form-actions">
  <%= link_to 'Back', users_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_user_path(@user), :class => 'btn' %>
  <%= link_to(user_path(@user), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger') do %>
    Delete <i class="icon-trash icon-white"></i>
  <% end %>





</div>