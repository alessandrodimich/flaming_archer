<% provide(:title, 'users') %>
<h1>Listing users</h1>

<table>
  <tr>
    <th>Email</th>
    <th>Username</th>
    <th>Password digest</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.email %></td>
    <td><%= user.username %></td>
    <td><%= user.password_digest %></td>
    <td><%= link_to 'Show', user, class: 'btn' %></td>
    <td><%= link_to(edit_user_path(user), :class => 'btn btn-primary') do %>  Edit  <i class="icon-edit icon-white"></i></td>
        <% end %>
    <td><%= link_to(user_path(user), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger') do %>Delete<i class="icon-trash icon-white"></i></td>
        <% end %>
  </tr>
  <% end %>

</table>

<br/>

<%= link_to ' Create New User', new_user_path %>