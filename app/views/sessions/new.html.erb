<% provide(:title, 'Login') %>
<h2>Sign in</h2>
<%= simple_form_for(:user, url: sessions_path, :html => {:class => 'form-vertical' }) do |f| %>
  <%= f.input :email,:required => true, :autofocus => true, placeholder: 'Email', label: false %>
  <%= f.input :password, :required => true, placeholder: 'Password', label: false %>
  <%= f.input :remember_me, as: :boolean, input_html: { checked: true } %>
  <%= f.button :submit, 'Login', :class => 'btn-primary' %>
<% end %>

<p> <%= link_to('Forgotten password?', new_password_reset_path) %> </p>
